// Medium Devices
@media (min-width: 768px)
  .menu
    font-size 3em
  .nav--active
    border 3.6em solid secondaryColor
    padding 6em 6.8em 3em 6.8em
  .nav__heading
  .section__heading
    font-size 6em
  .nav__items > a
    font-size 3em
  .header
    border 3.6em solid primaryColor
    padding 6em 6.8em 3em 6.8em
  .header__heading
    align-self start
    font-size 7em
    margin .8em .8em 0 .8em
  .header__tagline
    font-size 3.8em
    margin 0 1.6em
  .header__text--vertical
    font-size 1.8em
    padding 0
  .project__heading
  .section__heading--sub
    font-size 4em
  .section
    border 3.6em solid secondaryColor
    padding 6em 6.8em 3em 6.8em
  .grid--projects
    grid-gap 6em
  .paragraph
    font-size 2.6em
  .paragraph__intro
    font-size 2.4em
  .data-list__term
    font-size 2.4em
  .data-list__description
  .list__item
    font-size 2.6em
  .button
    border .3em solid secondaryColor
    font-size 2.4em
  .form
    margin 4em auto 0 auto
  .form__button
  .form__label
    font-size 2.4em
  .form__textarea
    border .5em solid secondaryColor
  input[type="text"]
  input[type="email"]
    border-bottom .5em solid secondaryColor
  .footer__author
    font-size 2.8em
    font-weight 300
  .heart
    width .6em
    height .6em
    margin 0 .6em
    &::before
    &::after
      width .6em
      height .6em
    &::before
      top -5px
      left 0
    &::after
      top 0
      left -5px

