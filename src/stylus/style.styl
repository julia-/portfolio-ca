primaryColor = #E2BBE8
secondaryColor = #222222

@font-face
  font-family 'Big John'
  src url('big_john-webfont.woff2') format('woff2')
      url('big_john-webfont.woff') format('woff')
  font-weight normal
  font-style normal

*
  margin 0
  padding 0
  box-sizing border-box
  max-width 100%

.flex-container
  display flex
  flex-direction column

header
  font-family 'Big John'
  background secondaryColor
  border 0.938em solid primaryColor
  color primaryColor
  width 100vw
  min-height 100vh
  padding 1.250em 1.250em 0 1.250em

.burger-container
  display flex
  justify-content flex-end
  margin-right 0.5em

.menu-text
  cursor pointer
  user-select none
  padding-right 0.333em

.burger
  cursor pointer
  user-select none
  position relative
  top 0.3em
  &:before
    content ' '
    width 0.938em
    height 0.3em
    background primaryColor
    position absolute
    top -0.275em
  &:after
    content ' '
    width 0.938em
    height 0.3em
    background primaryColor
    position absolute
    top 0.2em

nav > a
li > a
  color primaryColor
  text-decoration none
  display block

.hidden
  display none

.heading-container
  margin-top 2.813em
  h1
    font-size 2.250em
    padding-bottom 0.556em
  p:nth-child(2)
    font-size 2.250em
    padding-top 0.556em
  p:nth-child(3)
    font-size 1em
    padding-top 3.750em

.arrow-down
  position relative
  left 240px
  bottom -15px
  width 0
  height 0
  border-left 10px solid transparent
  border-right 10px solid transparent
  border-top 10px solid primaryColor
  &::before
    content ''
    width 0.375em
    height 2em
    background #e2bbe8
    position absolute
    bottom 20px
    left -3px

main
  background primaryColor
  border 0.938em solid secondaryColor
  color secondaryColor
  width 100vw
  // padding 2.188em 1.250em

main > section
  min-height 100vh
  border-bottom 0.938em solid secondaryColor 
  // padding 2.188em 1.250em
  padding 4.063em 1.250em
  &:nth-child(last)
    border-bottom none

main p
  font-family 'Montserrat', sans-serif
  font-weight 300
  font-size 1em
  line-height 1.5em
  padding-bottom 1em

h2
h3
  font-family 'Big John'

h2
  font-size 2.125em
  position relative
  padding-bottom 0.2em
  &:before
    content ''
    border-bottom 5px solid secondaryColor
    position absolute
    left 0
    bottom 0
    height 1px
    width 10%

h3
  font-size 1.875em
  position relative
  padding-bottom 0.2em
  margin-top 0.75em
  &:before
    content ''
    border-bottom 5px solid secondaryColor
    position absolute
    left 0
    bottom 0
    height 1px
    width 10%

.intro-paragraph
  font-family 'Big John'
  font-size 1.125em
  line-height 1em
  margin 1.111em 0
  padding 0

ul
  list-style none
  padding 1em 0

.likes-list
  margin-left 1em
  list-style square inside

.image-grid
  display flex
  flex-direction column
  // flex-wrap wrap
  justify-content space-between
  margin-top 1.563em

.image-grid > img
  max-width 100%
  height auto
  border 0.25em solid secondaryColor
  margin 0.25em 0

li
  font-family 'Montserrat', sans-serif;
  font-weight 300
  font-size 1em
  line-height 1.5em

input[type="text"]
input[type="email"]
  background transparent
  border none
  border-bottom: 0.25em solid secondaryColor
  min-width 100%
  margin-bottom 26px
  padding-bottom 4px
  outline none

footer
  display flex
  flex-direction column
  justify-content space-between
  background secondaryColor
  border 0.938em solid primaryColor
  color primaryColor
  min-height 50vh
  height auto
  padding 4.063em 1.250em 1.563em 1.250em
  li
    font-size 1.25em
  p
    // font-family 'Montserra'
    // font-weight 300
    font-family 'Big John'
    font-size 0.8em

footer h2
  font-size 2.125em
  position relative
  padding-bottom 0.1em
  &:before
    content ''
    border-bottom 0.2em solid primaryColor
    position absolute
    left 1px
    bottom 0
    height 1em
    width 1em

.footer-menu-container
  order 2

.connect-container
  order 1
  margin-bottom 1.875em

.author-container
  order 3
  margin 0.9375em auto 1.563em auto

.heart
  display inline-block
  position relative
  background primaryColor
  top 0
  width 0.75em
  height 0.75em
  transform rotate(45deg)
  margin 0 0.5em
  animation heartbeat 1.2s ease infinite
  &::before
  &::after
    content ''
    background primaryColor
    width 0.75em
    height 0.75em
    position absolute
    border-radius 50%
  &::before
    top -5px
    left 0
  &::after
    top 0
    left -5px

@keyframes heartbeat
  0%
    transform rotate(45deg) scale(1)
  50%
    transform rotate(45deg) scale(1.2)
  100%
    transform rotate(45deg) scale(1)


@media (min-width: 375px)
  header
    padding-left 2.3em
    padding-right 2.3em
  .heading-container 
    h1
      font-size 2.375em 
    p:nth-child(2)
      font-size 2.375em
      padding-top 1.25em
      padding-bottom 1.75em
    p:nth-child(3)
      font-size 1.15em
  .arrow-down
    left 265px

