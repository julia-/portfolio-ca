primaryColor = #E2BBE8
secondaryColor = #222222

@font-face
  font-family 'Big John'
  src: url("/assets/fonts/big-john-webfont.woff2") format('woff2'),
       url("/assets/fonts/big-john-webfont.woff") format('woff');
  font-weight normal
  font-style normal

*
  box-sizing border-box
  margin 0
  padding 0
  max-width 100%

html
body
  box-sizing border-box
  font-family 'Montserrat', Helvetica, 'Helvetica Neue', Arial, sans-serif
  font-size 62.5%
  height 100%
  margin 0
  overflow auto

.menu
  cursor pointer
  font-family 'Big John', Helvetica, 'Helvetica Neue', Arial, sans-serif
  font-size 2.4em
  height 1em
  mix-blend-mode difference
  padding-right 2.2em
  position fixed
  right 1.4em
  text-align center
  top 2.6em
  &:before
  &:after
    background primaryColor
    content ''
    height 0.2em
    position absolute
    right 1.25em
    width 1em
  &:before
    top 0em
    transition .5s
  &:after
    bottom 0.2em
    transition .5s
  &.menu--active
    z-index 1000
    mix-blend-mode unset
    &:before
      background secondaryColor
      top 0.4em
      transform rotate(45deg)
    &:after
      background secondaryColor
      bottom 0.4em
      transform rotate(-45deg)
  &.menu--active .menu--open
      display none

.menu--open
  color primaryColor
  cursor pointer
  padding-right 0.333em
  user-select none

.menu--close
  display none
  &.menu--active
    color secondaryColor
    cursor pointer
    display block
    padding-right 0.333em
    user-select none

.nav
  display none
.nav--active
  background primaryColor
  border 2.6em solid secondaryColor
  bottom 0
  display block
  height 100vh
  left 0
  padding 5em 3em 0 3em
  position absolute
  overflow-y auto
  overflow-x auto
  right 0
  top 0
  z-index 999

.header
  background secondaryColor
  border 2.6em solid primaryColor
  color primaryColor
  display grid
  font-family 'Big John', Helvetica, 'Helvetica Neue', Arial, sans-serif
  grid-gap 1em
  grid-template-columns auto 1fr
  grid-template-rows 2fr 2fr 1fr
  height 100vh
  padding 6em 3em 0 3em
  width 100vw

.header__heading
  align-self center
  font-size 5em
  justify-self start
  margin .4em
  grid-column 1 / -1

.header__tagline
  align-self start
  font-size 2.4em
  grid-column 1 / 2
  grid-row 3 / 4
  margin .6em
  justify-self center

.header__text--vertical
  align-self start
  cursor default
  font-size 1.4em
  grid-column 2 / 3
  grid-row 3 / 4
  justify-self center
  padding 1.2em
  word-spacing 1em
  writing-mode vertical-rl

.section
  background primaryColor
  border 2.6em solid secondaryColor
  color secondaryColor
  width 100vw
  min-height 100vh
  padding 5em 3em 0 3em

