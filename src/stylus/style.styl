    padding 0
  .project__heading
  .section__heading--sub
    font-size 4em
  .section
    border 4.6em solid secondaryColor
    padding 6em 6.8em 3em 6.8em
  .grid--projects
    grid-gap 7em
  .paragraph
    font-size 2.8em
  .paragraph__intro
    font-size 3em
  .data-list__term
    font-size 3em
  .data-list__description
  .list__item
    font-size 2.8em
  .button
    border .3em solid secondaryColor
    font-size 2.8em
  .form
    margin 4em auto 0 auto
  .form__button
  .form__label
    font-size 2.4em
  .form__textarea
    border .5em solid secondaryColor
  input[type="text"]
  input[type="email"]
    border-bottom .5em solid secondaryColor
  .footer__author
    font-size 2.8em
    font-weight 300
  .heart
    width .6em
    height .6em
    margin 0 .6em
    &::before
    &::after
      width .6em
      height .6em
    &::before
      top -5px
      left 0
    &::after
