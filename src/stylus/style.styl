primaryColor = #E2BBE8
secondaryColor = #222222

@font-face
  font-family 'Big John'
  src url('big_john-webfont.woff2') format('woff2')
      url('big_john-webfont.woff') format('woff')
  font-weight normal
  font-style normal

*
  margin 0
  padding 0
  box-sizing border-box
  max-width 100%

.flex-container
  display flex
  flex-direction column

body.noscroll
  overflow hidden

header
  font-family 'Big John'
  background secondaryColor
  border 0.938em solid primaryColor
  color primaryColor
  width 100vw
  min-height 100vh
  padding 1.563em 1.250em 0 1.250em

.menu-toggle
  position absolute
  top 2.25em
  right 1.25em
  text-align center
  height .95em
  cursor pointer
  padding-right 3em

.open
.close
  position absolute
  top 0
  right 2.75em
  font-family 'Big John'

.open
  color primaryColor
  cursor pointer
  user-select none
  padding-right 0.333em

.close
  display none

.close.active
  display block
  color secondaryColor
  cursor pointer
  user-select none
  padding-right 0.333em

.menu-toggle.active .open
  display none

.menu-toggle::before
.menu-toggle::after
  content ''
  position absolute
  width 1em
  height 0.2em
  right 1.25em
  background primaryColor

.menu-toggle::before
  top 0em
  transition .5s

.menu-toggle::after
  bottom 0.2em
  transition .5s

.menu-toggle.active::before
  background secondaryColor
  top 0.4em
  transform rotate(45deg)

.menu-toggle.active::after
  background secondaryColor
  bottom 0.4em
  transform rotate(-45deg)

.nav-menu
  display none

.nav-menu.active
  display block
  height 100vh
  background primaryColor
  border 0.938em solid secondaryColor
  padding 1.25em 1.25em 0 1.25em
  overflow-y auto
  h2
    margin-top 1.184em
  .nav-links
    margin-top 1.875em
  .nav-links > a
    font-family 'Big John'
    font-size 1.75em
    color secondaryColor
    padding-bottom 0.714em

.nav-links > a
li > a
  display block
  text-decoration none

li > a
   color primaryColor

.hidden
  display none

.heading-container
  margin-top 2.813em
  h1
    font-size 2.250em
    padding-bottom 0.556em
  p:nth-child(2)
    font-size 2.250em
    padding-top 0.556em
  p:nth-child(3)
    font-size 1em
    padding-top 3.750em

.arrow-down
  position relative
  left 240px
  bottom -15px
  width 0
  height 0
  border-left 10px solid transparent
  border-right 10px solid transparent
  border-top 10px solid primaryColor
  &::before
    content ''
    width 0.375em
    height 2em
    background #e2bbe8
    position absolute
    bottom 20px
    left -3px

main
  background primaryColor
  border 0.938em solid secondaryColor
  color secondaryColor
  width 100vw
  // padding 2.188em 1.250em
  section:last-child
    border-bottom none

main > section
  min-height 100vh
  border-bottom 0.938em solid secondaryColor 
  // padding 2.188em 1.250em
  padding 4.063em 1.250em

main p
  padding-bottom 1em

main p
dd
  font-family 'Montserrat', sans-serif
  line-height 1.5em
  font-weight 300
  font-size 1em

dt
  font-family 'Big John'
  padding-top 1em

dl
  margin 2em 0
  dt:first-child
    padding-top 0

h2
h3
  font-family 'Big John'

h2
  font-size 2.125em
  position relative
  padding-bottom 0.2em
  &:before
    content ''
    border-bottom 5px solid secondaryColor
    position absolute
    left 0
    bottom 0
    height 1px
    width 10%

h3
  font-size 1.750em
  position relative
  padding-bottom 0.2em
  margin-top 0.75em
  &:before
    content ''
    border-bottom 5px solid secondaryColor
    position absolute
    left 0
    bottom 0
    height 1px
    width 10%

.intro-paragraph
  font-family 'Big John'
  font-size 1.125em
  line-height 1em
  margin 1.111em 0
  padding 0

.image-grid
  display flex
  flex-direction column
  // flex-wrap wrap
  justify-content space-between
  margin-top 1.563em

.image-grid > img
  max-width 100%
  height auto
  border 0.25em solid secondaryColor
  margin 0.25em 0

ul
  list-style none
  padding 1em 0

.likes-list
.skills-list
  margin-left 1em
  list-style square inside

li
  font-family 'Montserrat', sans-serif;
  font-weight 300
  font-size 1em
  line-height 1.5em

button
  display block
  background primaryColor
  border 0.25em solid secondaryColor
  width 12em
  height 2.5em
  margin 2.5em auto 0 auto
  padding-top 1em
  padding-bottom 2em
  font-family 'Big John'
  font-size 1.15em
  &:hover
    background secondaryColor
    color primaryColor

form
  position relative
  margin 2.5em auto 0 auto
  font-family 'Big John'

input[type="text"]
input[type="email"]
  background transparent
  border none
  border-bottom 0.35em solid secondaryColor
  min-width 100%
  margin-bottom 26px
  padding-bottom 4px
  outline none

textarea
  background primaryColor
  border 0.25em solid secondaryColor
  min-width 100%
  font-family 'Montserrat', sans-serif
  font-weight 300
  font-size 1em
  &:focus
    outline none

button[type="submit"]
  position absolute
  bottom -3.25em
  right 0
  background primaryColor
  border 0.2em solid secondaryColor
  width 5.5em
  padding-top 0.75em
  padding-bottom 1.75em
  cursor pointer
  font-family 'Big John'
  font-size 1.15em
  &:focus
    outline none

footer
  display flex
  flex-direction column
  justify-content space-between
  background secondaryColor
  border 0.938em solid primaryColor
  color primaryColor
  min-height 50vh
  height auto
  padding 4.063em 1.250em 1.563em 1.250em
  li
    font-size 1.25em
  p
    // font-family 'Montserra'
    // font-weight 300
    font-family 'Big John'
    font-size 0.8em

footer h2
  font-size 2.125em
  position relative
  padding-bottom 0.1em
  &:before
    content ''
    border-bottom 0.2em solid primaryColor
    position absolute
    left 1px
    bottom 0
    height 1em
    width 1em

.footer-menu-container
  order 2

.connect-container
  order 1
  margin-bottom 1.875em

.author-container
  order 3
  margin 0.9375em auto 1.563em auto

.heart
  display inline-block
  position relative
  background primaryColor
  top 0
  width 0.75em
  height 0.75em
  transform rotate(45deg)
  margin 0 0.5em
  animation heartbeat 1.2s ease infinite
  &::before
  &::after
    content ''
    background primaryColor
    width 0.75em
    height 0.75em
    position absolute
    border-radius 50%
  &::before
    top -5px
    left 0
  &::after
    top 0
    left -5px

@keyframes heartbeat
  0%
    transform rotate(45deg) scale(1)
  50%
    transform rotate(45deg) scale(1.2)
  100%
    transform rotate(45deg) scale(1)


@media (min-width: 375px)
  header
    padding-left 2.3em
    padding-right 2.3em
  .heading-container 
    h1
      font-size 2.375em 
    p:nth-child(2)
      font-size 2.375em
      padding-top 1.25em
      padding-bottom 1.75em
    p:nth-child(3)
      font-size 1.15em
  .arrow-down
    left 265px

@media (min-width: 768px)
  header
    border 1.563em solid primaryColor
    padding-top 3.75em
    padding-left 3.438em
    padding-right 3.438em
  .heading-container h1
    margin-top 1.563em
    font-size 4em
  .heading-container p:nth-child(2)
    font-size 4em
