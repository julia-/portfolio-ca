primaryColor = #E2BBE8
secondaryColor = #222222

@font-face
  font-family 'Big John'
  src url('big_john-webfont.woff2') format('woff2')
      url('big_john-webfont.woff') format('woff')
  font-weight normal
  font-style normal

*
  margin 0
  padding 0
  box-sizing border-box
  max-width 100%

.flex-container
  display flex
  flex-direction column

header
  font-family 'Big John'
  background secondaryColor
  border 0.938em solid primaryColor
  color primaryColor
  width 100vw
  min-height 100vh
  padding 2.188em 1.250em

.burger-container
  display flex
  justify-content flex-end
  margin-right 0.5em

.menu-text
  cursor pointer
  user-select none
  padding-right 0.333em

.burger
  cursor pointer
  user-select none
  position relative
  top 0.3em
  &:before
    content ' '
    width 0.938em
    height 0.3em
    background primaryColor
    position absolute
    top -0.275em
    // transform-origin 50% 50%
  &:after
    content ' '
    width 0.938em
    height 0.3em
    background primaryColor
    position absolute
    top 0.2em
    // transform-origin 50% 50%

nav > a
  color primaryColor
  text-decoration none
  display block

.hidden
  display none

.heading-container
  margin-top 3.125em
  h1
    font-size 2.250em
  p:nth-child(2)
    font-size 2.250em
    padding 1em 0
  p:nth-child(3)
    font-size 1em  

.arrow-down
  position relative
  left 240px
  bottom -30px
  width 0
  height 0
  border-left 10px solid transparent
  border-right 10px solid transparent
  border-top 10px solid primaryColor
  &::before
    content ''
    width 0.375em
    height 2.8em
    background #e2bbe8
    position absolute
    bottom 20px
    left -3px

main
  background primaryColor
  border 0.5em solid secondaryColor
  color secondaryColor
  border-top none
  width 100vw

main > section
  min-height 100vh

@media (min-width: 375px)
  header
    padding-left 2.3em
    padding-right 2.3em
  .heading-container 
    h1
      font-size 2.375em 
    p:nth-child(2)
      font-size 2.375em
      padding-top 1.25em
      padding-bottom 1.75em
    p:nth-child(3)
      font-size 1.15em
  .arrow-down
    left 265px

