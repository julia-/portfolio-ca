img
  // max-width 100%
  // height auto
  border 0.25em solid secondaryColor
  margin 0.25em 0

.project-link
  font-family 'Big John', Helvetica, 'Helvetica Neue', Arial, sans-serif
  color secondaryColor
  text-decoration none
  &:hover
    background secondaryColor
    color primaryColor
// button
.button
  display block
  background primaryColor
  border 0.25em solid secondaryColor
  width 12em
  height 2.5em
  margin 2.5em auto 0 auto
  padding-top 1em
  padding-bottom 2em
  font-family 'Big John', Helvetica, 'Helvetica Neue', Arial, sans-serif
  font-size 1.15em
  color secondaryColor
  text-align center
  text-decoration none
  &:hover
    background secondaryColor
    color primaryColor

.contact-container
  padding-bottom 0
  min-height 95vh

form
  position relative
  margin 2em auto 0 auto
  font-family 'Big John', Helvetica, 'Helvetica Neue', Arial, sans-serif

input[type="text"]
input[type="email"]
  background transparent
  border none
  border-bottom 0.35em solid secondaryColor
  min-width 100%
  margin-bottom 26px
  padding-bottom 4px
  outline none
  border-radius 0
  appearance none
  font-family 'Montserrat', Helvetica, 'Helvetica Neue', Arial, sans-serif
  font-weight 300
  font-size 1em

input::placeholder
  font-family 'Big John', Helvetica, 'Helvetica Neue', Arial, sans-serif
  font-size 1em
  color secondaryColor

input:-webkit-autofill
  -webkit-box-shadow 0 0 0 30px primaryColor inset
  -webkit-text-fill-color secondaryColor !important

textarea
  background primaryColor
  border 0.25em solid secondaryColor
  min-width 100%
  height 10em
  font-family 'Montserrat', Helvetica, 'Helvetica Neue', Arial, sans-serif
  font-weight 300
  font-size 1em
  border-radius 0
  appearance none
  &:focus
    outline none

button[type="submit"]
  position absolute
  bottom -3.25em
  right 0
  background primaryColor
  border 0.2em solid secondaryColor
  width 6em
  height 2em
  padding-top 0.75em
  padding-bottom 1.75em
  font-family 'Big John', Helvetica, 'Helvetica Neue', Arial, sans-serif
  font-size 1.15em
  cursor pointer
  margin 0 auto
  border-radius 0
  appearance none
  &:hover
    background secondaryColor
    color primaryColor
  &:focus
    outline none

.author-container
  margin 1.563em auto 0.5em auto
  text-align center

.heart
  display inline-block
  position relative
  background primaryColor
  top 0
  width 1em
  height 1em
  transform rotate(45deg)
  margin 0 1em
  animation heartbeat 1.2s ease infinite
  &::before
  &::after
    content ''
    background primaryColor
    width 1em
    height 1em
    position absolute
    border-radius 50%
  &::before
    top -5px
    left 0
  &::after
    top 0
    left -5px

@keyframes heartbeat
  0%
    transform rotate(45deg) scale(1)
  50%
    transform rotate(45deg) scale(1.2)
  100%
    transform rotate(45deg) scale(1)

