.nav__heading
    margin-top 1.8em
  .nav__items
    margin-top 1.8em
  .nav__items > a
    color secondaryColor
    font-family 'Big John', Helvetica, 'Helvetica Neue', Arial, sans-serif
    font-size 1.75em
    padding-bottom 1em

.nav__items > a
li > a
  display block
  text-decoration none

li > a
  color secondaryColor

.hidden
  display none

.grid--image
  display grid
  grid-gap 10px
  grid-template-columns repeat(auto-fit, minmax(180px, 1fr))
  padding 3em

.grid__heading
  grid-column 1 / -1

.paragraph
  font-size 1.4em
  line-height 1.25em
  padding-bottom 0.4em

.list
  list-style square inside
  margin-left 1em
  padding 1em 0

.list--type-none
    list-style none
    margin 0
    padding 0

.data-list__description
.list__item
  font-family 'Montserrat', Helvetica, 'Helvetica Neue', Arial, sans-serif
  line-height 1.25em
  font-weight 300
  font-size 1.4em
  &--large
    font-size 1.6em

.data-list__term
  font-family 'Big John', Helvetica, 'Helvetica Neue', Arial, sans-serif
  font-size 1.6em
  padding-top 1em

.data-list
  margin 2em 0
  .data-list__term:first-child
    padding-top 0.4em

.nav__heading
.section__heading
  font-family 'Big John', Helvetica, 'Helvetica Neue', Arial, sans-serif
  font-size 3em
  margin 0.5em 0
  padding 0.5em 0
  position relative
  &:before
    content ''
    border-bottom 0.2em solid secondaryColor
    position absolute
    left 0
    bottom 0
    height 1px
    width 10%

.section__heading--sub
  font-size 2em
  margin 1em 0 0.5em 0
  padding 0.5em 0
  &:before
    content ''
    border-bottom 0.2em solid secondaryColor
    position absolute
    left 0
    bottom 0
    height 1px
    width 10%

.paragraph__intro
  font-family 'Big John', Helvetica, 'Helvetica Neue', Arial, sans-serif
  font-size 1.2em
  line-height 1.25em
  margin 1em 0
  padding 0

