primaryColor = #E2BBE8
secondaryColor = #222222

*
  margin 0
  padding 0
  box-sizing border-box
  max-width 100%

header
  background secondaryColor
  border 1em solid primaryColor
  color primaryColor
  width 100vw
  height 100vh
  padding 2em

.burger-container
  display flex
  justify-content flex-end
  margin-right 0.5em
  text-align: right

.menu-text
  cursor pointer
  user-select none
  padding-right 0.75em

.burger
  cursor pointer
  user-select none
  width 0.938em
  height 0.156em
  background primaryColor
  position relative
  top 0.3em
  text-align: right
  &::before
    content ' '
    width 0.625em
    height 0.156em
    background primaryColor
    position absolute
    top -0.3em
    transform-origin 50% 50%
  &::after
    content ' '
    width 1.250em
    height 0.156em
    background primaryColor
    position absolute
    top 0.3em
    transform-origin 50% 50%

nav > a
  color primaryColor
  text-decoration none
  display block

.hidden
  display none

h1
  font-size 2.375em
  margin-top 1.75em

.arrow-down
  width 0
  height 0
  border-left 7px solid transparent
  border-right 7px solid transparent
  border-top 7px solid primaryColor
  &::before
    content ''
    width 0.2em
    height 3em
    background primaryColor
    position absolute
    top 3em

main
  background primaryColor
  border 0.5em solid secondaryColor
  color secondaryColor
  border-top none
  width 100vw

main > section
  height 100vh
